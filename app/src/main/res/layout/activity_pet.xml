<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    tools:context=".pet">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="3dp"
        android:elevation="5dp"
        android:backgroundTint="@android:color/darker_gray"
        android:layout_marginTop="20sp"
        android:layout_marginRight="20sp"
        android:layout_marginBottom="20sp"
        android:layout_marginLeft="20sp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:orientation="vertical">


            <TextView
                android:id="@+id/viewcet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_marginRight="30sp"
                android:layout_marginLeft="30sp"
                android:textAlignment="center"
                android:layout_marginTop="20sp"
                android:textSize="30sp"
                android:textColor="@color/black"
                android:text="Text 1" />

            <!-- Add your image here -->

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="336dp"
                android:layout_height="160dp"
                android:layout_marginLeft="5sp"
                android:layout_marginRight="35sp"
                android:src="@drawable/download" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="30sp"
                android:layout_marginLeft="30sp"
                android:layout_marginTop="10sp"
                android:textAlignment="center"
                android:text="TITEL"
                android:textColor="@color/black"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/viewforwhat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="30sp"
                android:layout_marginLeft="30sp"
                android:layout_marginTop="5sp"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:text="Text 1" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="30sp"
                android:layout_marginLeft="30sp"
                android:layout_marginTop="10sp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:text="BREED" />

            <TextView
                android:id="@+id/viewfbreed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="30sp"
                android:layout_marginLeft="30sp"
                android:layout_marginTop="5sp"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:text="Text 2" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="30sp"
                android:layout_marginLeft="30sp"
                android:layout_marginTop="10sp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:text=" SEX" />

            <TextView
                android:id="@+id/viewsex"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="30sp"
                android:layout_marginLeft="30sp"
                android:layout_marginTop="5sp"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:text="Text 3" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="30sp"
                android:layout_marginLeft="30sp"
                android:layout_marginTop="10sp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:text="PRICE (Rs.)" />

            <TextView
                android:id="@+id/viewpric"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="30sp"
                android:layout_marginLeft="30sp"
                android:layout_marginTop="5sp"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:text="Text 4" />



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="30sp"
                android:layout_marginLeft="30sp"
                android:layout_marginTop="10sp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:text="CONTACT INFO" />

            <TextView
                android:id="@+id/viewownername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="30sp"
                android:layout_marginLeft="30sp"
                android:textAlignment="center"
                android:layout_marginTop="5sp"
                android:textColor="@color/black"
                android:text="Text 5" />



            <TextView
                android:id="@+id/viewowneremail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="30sp"
                android:layout_marginLeft="30sp"
                android:layout_marginTop="10sp"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:text="Text 6" />

            <TextView
                android:id="@+id/viewownerphonenumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="30sp"
                android:layout_marginLeft="30sp"
                android:layout_marginTop="5sp"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:text="Text 6" />

            <TextView
                android:id="@+id/viewowneraddersss"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="30sp"
                android:layout_marginLeft="30sp"
                android:layout_marginTop="5sp"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:text="Text 6" />

            <Button
                android:id="@+id/btn_contact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Contact"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#191818"
                android:layout_marginRight="30sp"
                android:layout_marginLeft="30sp"
                android:backgroundTint="#CC6D8D"
                />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>